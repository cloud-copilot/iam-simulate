[
  {
    "name": "Implicit Deny Due to Permission Boundary Condition Should Be Ignored",
    "request": {
      "action": "s3:ListBucket",
      "resource": {
        "resource": "*",
        "accountId": "123456789012"
      },
      "principal": "arn:aws:iam::123456789012:user/test-user",
      "context": {
        "aws:Username": "test-user"
      }
    },
    "identityPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "*"
          }
        ]
      }
    ],
    "permissionBoundaries": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": "*",
            "Condition": {
              "StringEquals": {
                "aws:SourceVpc": "vpc-123456"
              }
            }
          }
        ]
      }
    ],
    "simulation": {
      "mode": "Discovery"
    },
    "expected": {
      "response": "Allowed",
      "ignoredConditions": {
        "permissionBoundary": {
          "allow": [{ "key": "aws:SourceVpc", "op": "StringEquals", "values": ["vpc-123456"] }]
        }
      }
    }
  },
  {
    "name": "Explicit Deny In Permission Boundary Condition Should Be Ignored",
    "request": {
      "action": "s3:ListBucket",
      "resource": {
        "resource": "*",
        "accountId": "123456789012"
      },
      "principal": "arn:aws:iam::123456789012:user/test-user",
      "context": {
        "aws:Username": "test-user"
      }
    },
    "identityPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "*"
          }
        ]
      }
    ],
    "permissionBoundaries": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
          },
          {
            "Effect": "Deny",
            "Action": "s3:*",
            "Resource": "*",
            "Condition": {
              "StringNotEquals": {
                "aws:SourceVpc": "vpc-123456"
              }
            }
          }
        ]
      }
    ],
    "simulation": {
      "mode": "Discovery"
    },
    "expected": {
      "response": "Allowed",
      "ignoredConditions": {
        "permissionBoundary": {
          "deny": [{ "key": "aws:SourceVpc", "op": "StringNotEquals", "values": ["vpc-123456"] }]
        }
      }
    }
  }
]
