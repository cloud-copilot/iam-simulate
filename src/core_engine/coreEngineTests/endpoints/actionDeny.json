[
  {
    "name": "Implicit Deny when Endpoint Policy Does Not Match Action",
    "request": {
      "action": "s3:ListBucket",
      "resource": {
        "resource": "arn:aws:s3:::my-bucket",
        "accountId": "123456789012"
      },
      "principal": "arn:aws:iam::123456789012:user/test-user"
    },
    "identityPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::my-bucket"
          }
        ]
      }
    ],
    "endpointPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "*"
          }
        ]
      }
    ],
    "expected": {
      "response": "ImplicitlyDenied",
      "blockedBy": ["vpce"]
    }
  },
  {
    "name": "Explicitly Deny when Endpoint Policy Denys Action",
    "request": {
      "action": "s3:ListBucket",
      "resource": {
        "resource": "arn:aws:s3:::my-bucket",
        "accountId": "123456789012"
      },
      "principal": "arn:aws:iam::123456789012:user/test-user"
    },
    "identityPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::my-bucket"
          }
        ]
      }
    ],
    "endpointPolicies": [
      {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
          },
          {
            "Effect": "Deny",
            "Action": "s3:ListBucket",
            "Resource": "*"
          }
        ]
      }
    ],
    "expected": {
      "response": "ExplicitlyDenied",
      "blockedBy": ["vpce"]
    }
  }
]
